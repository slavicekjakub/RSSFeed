@model List<RSSFeed.Models.Article>

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h1>Přehled článků v RSS feedu</h1></center>

<br />

@if (@Model != null)
{
    if (@Model.Count > 0)
    {
        @foreach (var @article in @Model)
        {
            <div class="flex-container">
                <div>
                    <h2>@article.Title</h2>
                    <b>Autor: </b>@article.Author
                    <br />
                    @if (article.Description != null)
                    {
                        <p>@Html.Raw(article.Description)</p>
                    }
                    <p><a target="_blank" href=@article.Link>@article.Link</a></p>

                    @if (article.PublishDate != null)
                    {
                        <p><b>Datum publikace: </b> @article.PublishDate</p>
                    }
                </div>
            </div>

        }
    }
}

<div>
    <a asp-action="Index" class="btn btn-info">Zpět na přehled</a>
</div>