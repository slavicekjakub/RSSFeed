@model List<RSSFeed.Models.Article>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h1>Přehled článků v RSS feedu</h1></center>

<br />

@if (@Model != null)
{
    if (@Model.Count > 0)
    {
        @foreach (var @article in @Model)
        {
            <h2>@article.Title</h2>
            <b>@article.Author</b>
            <br />
            @if (article.Description != null)
            {
                @Html.Raw(article.Description)
            }
            <a target="_blank" href=@article.Link>@article.Link</a><br />
            @if (article.PublishDate != null)
            {
                <b>Datum publikace: </b> @article.PublishDate
            }
            <hr />
        }
    }
}

<div>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>